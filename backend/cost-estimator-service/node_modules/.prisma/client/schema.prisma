generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CloudPricing {
  id             String   @id @default(uuid()) @db.Uuid
  provider       String   @map("provider")
  region         String   @map("region")
  serviceName    String   @map("service_name")
  skuName        String   @map("sku_name")
  unit           String   @map("unit")
  retailPrice    Float    @map("retail_price")
  currency       String   @map("currency")
  pricingVersion String   @map("pricing_version")
  lastUpdated    DateTime @updatedAt @map("last_updated")

  @@unique([provider, region, serviceName, skuName, unit], name: "provider_region_service_sku_unit_unique")
  @@index([provider])
  @@index([region])
  @@index([skuName])
  @@index([provider, region, skuName])
  @@map("cloud_pricing")
}
